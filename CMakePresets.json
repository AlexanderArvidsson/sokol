            "displayName": "macOS ARC OpenGL Debug",
            "generator": "Ninja",
            "binaryDir": "tests/build/macos_arc_gl_debug",
            "cacheVariables": {
                "SOKOL_BACKEND": "SOKOL_GLCORE33",
