            }
        },
        {
            "name": "macos_metal_release",
            "displayName": "macOS Metal Release",
            "generator": "Ninja",
            "binaryDir": "tests/build/macos_metal_release",
            "cacheVariables": {
                "SOKOL_BACKEND": "SOKOL_METAL",
